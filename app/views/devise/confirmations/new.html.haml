.row
  .small-12.large-8.small-centered.large-centered.columns
    %h2.text-center= t("devise.confirmations.resend_confirmation")

.row
  .small-12.large-8.small-centered.large-centered.columns
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.email')
        .small-9.medium-8.large-8.columns.left
          = f.email_field :email, :autofocus => true

      .row
        .small-6.small-centered.medium-6.large-8.large-centered.columns= f.submit t("devise.confirmations.resend_confirmation"), :class => "button expand"

      .row
        .small-12.columns.text-center= render "devise/shared/links"
