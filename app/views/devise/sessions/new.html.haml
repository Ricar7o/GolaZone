.row
  .small-12.columns
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :class => "form-signin"}) do |f|
      .row
        .small-12.medium-6.large-4.columns
          %h2 Sign in

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Email
        .small-9.medium-6.large-4.columns.left
          = f.email_field :email, :autofocus => true, :placeholder => "Email address"
       
      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Password
        .small-9.medium-6.large-4.columns.left
          = f.password_field :password, :placeholder => "Password"

      .row
        .small-12.columns
          - if devise_mapping.rememberable?
            %label.checkbox
              = f.check_box :remember_me
              = "Remember me"

      .row
        .small-12.medium-6.large-4.columns= f.submit "Log in", :class => "button"

      .row
        .small-12.medium-6.large-4.columns= render "devise/shared/links"