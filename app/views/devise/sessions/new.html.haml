.row
  .small-12.large-6.small-centered.large-centered.columns
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { :class => "custom"}) do |f|
      .row
        .text-center.columns
          %h2= t 'devise.actions.signin'

      .row.collapse
        .small-3.medium-3.large-4.columns
          %span.prefix.radius= t "user.email"
        .small-9.medium-9.large-8.columns.left
          = f.email_field :email, :autofocus => true, :placeholder => t('user.email_long')

      .row.collapse
        .small-3.medium-3.large-4.columns
          %span.prefix.radius= t 'user.password'
        .small-9.medium-9.large-8.columns.left
          = f.password_field :password, :placeholder => t('user.password')

      .row
        .small-12.columns
          - if devise_mapping.rememberable?
            %label.checkbox
              = f.check_box :remember_me
              = t "devise.sessions.remember"
      %br
      .row
        .small-6.small-centered.large-4.large-centered.columns= f.submit t("devise.actions.signin"), :class => "button expand"

      .row
        .small-12.columns= render "devise/shared/links"