.row
  .small-12.large-6.small-centered.large-centered.columns
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "custom" }, method: :put) do |f|
      = devise_error_messages!

      .row
        .text-center.columns
          %h2= t 'devise.actions.edit_user'

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t 'user.email'
        .small-9.medium-8.large-8.columns.left
          = f.email_field :email, :autofocus => true, :placeholder => t('user.email_long')

          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div= "Currently waiting confirmation for: " + resource.unconfirmed_email

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.first_name')
        .small-9.medium-8.large-8.columns.left
          = f.text_field :first_name, :autocomplete => "off", :placeholder => t('user.first_name')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.last_name')
        .small-9.medium-8.large-8.columns.left
          = f.text_field :last_name, :autocomplete => "off", placeholder: t('user.last_name')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.username')
        .small-9.medium-8.large-8.columns.left
          = f.text_field :username, :autocomplete => "off", :placeholder => t('user.username')

      .row.collapse
        .small-3.large-4.columns
          %span.prefix= t('user.language')
        .small-9.large-8.columns.left
          = f.select(:language, [["English", "en"], ["EspaÃ±ol (MX)", "es-MX"]], {}, {id: "customDropdown", class: "large language_selection" })

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.password')
        .small-9.medium-8.large-8.columns.left
          = f.password_field :password, :autocomplete => "off", :placeholder => t('user.leave_blank')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.confirm')
        .small-9.medium-8.large-8.columns.left
          = f.password_field :password_confirmation, :autocomplete => "off", :placeholder => t('user.confirm_password') + t('user.skip')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.current')
        .small-9.medium-8.large-8.columns.left
          = f.password_field :current_password, :autocomplete => "off", :placeholder => t('user.current_long')

      .row
        .small-6.small-centered.large-4.large-centered.columns
          = f.submit t('devise.actions.update'), class: "button expand"

  .small-12.large-6.small-centered.large-centered.columns
    .row
      .small-12.columns.text-center
        %h3= t('devise.actions.cancel')

      .small-12.columns.text-center
        %p= t('devise.actions.unhappy')

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { class: "custom" }, method: :delete) do |f|

      .small-8.small-centered.large-6.large-centered.columns
        = f.submit t('devise.actions.cancel'), class: "button alert expand", :data => { :confirm => t('devise.confirmations.are_you_sure') }
        /= button_to t('devise.actions.cancel'), registration_path(resource_name), :data => { :confirm => t('devise.confirmations.are_you_sure') }, :method => :delete, class: "button alert expand"

      .small-12.columns.text-center
        = link_to t('devise.actions.back'), :back