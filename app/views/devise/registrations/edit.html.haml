%h2= "Edit " + resource_name.to_s.humanize

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!

  %div
    = f.email_field :email, :autofocus => true, :class => "input-xlarge", :placeholder => "Email"

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div= "Currently waiting confirmation for: " + resource.unconfirmed_email

  %div
    = f.text_field :first_name, :autocomplete => "off", :class => "input-xlarge", :placeholder => "First name"

  %div
    = f.text_field :last_name, :autocomplete => "off", :class => "input-xlarge", :placeholder => "Last name"

  %div
    = f.text_field :username, :autocomplete => "off", :class => "input-xlarge", :placeholder => "Username"

  %div
    = f.password_field :password, :autocomplete => "off", :class => "input-xlarge", :placeholder => "Password (leave blank to keep the same)"

  %div
    = f.password_field :password_confirmation, :autocomplete => "off", :class => "input-xlarge", :placeholder => "Confirm password (skip if unchanged)"

  %div
    = f.password_field :current_password, :autocomplete => "off", :class => "input-xlarge", :placeholder => "Current password"

  %div= f.submit "Update", class: "btn btn-warning"

%h3 Cancel my account

%p= "Unhappy?"
= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-danger"

= link_to "Back", :back
