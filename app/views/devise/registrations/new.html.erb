<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
  
  <h2 class="form-signin-heading">Sign up</h2>
  <%= f.email_field :email, :autofocus => true, :class => "input-xlarge", :placeholder => "Email address" %>
  <br>
  <%= f.text_field :first_name, :class => "input-xlarge", :placeholder => "First name" %>
  <br>
  <%= f.text_field :last_name, :class => "input-xlarge", :placeholder => "Last name" %>
  <br>
  <%= f.text_field :username, :class => "input-xlarge", :placeholder => "Choose a username" %>
  <br>
  <%= f.password_field :password, :class => "input-xlarge", :placeholder => "Password" %>
  <br>
  <%= f.password_field :password_confirmation, :class => "input-xlarge", :placeholder => "Password confirmation" %>
  <br>
  <div><%= f.submit "Sign up", :class => "btn btn-large btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
