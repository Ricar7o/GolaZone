.row
  .small-12.large-6.small-centered.large-centered.columns
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => "custom"}) do |f|
      = devise_error_messages!

      .row
        .text-center.columns
          %h2= t('devise.actions.signup')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.email')
        .small-9.medium-8.large-8.columns.left
          = f.email_field :email, :autofocus => true, :placeholder => t('user.email_long')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.first_name')
        .small-9.medium-8.large-8.columns.left
          = f.text_field :first_name, :placeholder => t('user.first_name')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.last_name')
        .small-9.medium-8.large-8.columns.left
          = f.text_field :last_name, :placeholder => t('user.last_name')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.username')
        .small-9.medium-4.large-8.columns.left
          = f.text_field :username, :placeholder => t('user.username_long')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.language')
        .small-9.medium-8.large-8.columns.left
          = f.select(:language, [["English", "en"], ["EspaÃ±ol (MX)", "es-MX"]], {}, {id: "customDropdown", class: "large language_selection" })

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.password')
        .small-9.medium-8.large-8.columns.left
          = f.password_field :password, :placeholder => t('user.password')

      .row.collapse
        .small-3.medium-4.large-4.columns
          %span.prefix.radius= t('user.confirm')
        .small-9.medium-8.large-8.columns.left
          = f.password_field :password_confirmation, :placeholder => t('user.confirm_password')

      .row
        .small-6.small-centered.medium-6.large-4.large-centered.columns= f.submit t('devise.actions.signup'), :class => "button expand"

      .row
        .small-12.columns.text-center= render "devise/shared/links"