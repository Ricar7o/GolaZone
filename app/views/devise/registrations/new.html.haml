.row
  .small-12.columns
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { :class => "custom"}) do |f|
      = devise_error_messages!

      .row
        .small-12.columns
          %h2 Sign up

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Email
        .small-9.medium-6.large-5.columns.left
          = f.email_field :email, :autofocus => true, :placeholder => "Email address"

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} First name
        .small-9.medium-6.large-5.columns.left
          = f.text_field :first_name, :placeholder => "First name"

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Last name
        .small-9.medium-6.large-5.columns.left
          = f.text_field :last_name, :placeholder => "Last name"

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Username
        .small-9.medium-6.large-5.columns.left
          = f.text_field :username, :placeholder => "Choose a username"

      .row
        .large-12.columns
          .row.collapse
            .small-3.large-2.columns
              %span{class: "prefix"} Language
            .small-9.large-5.columns.left
              = f.select(:language, [["English", "en"], ["EspaÃ±ol (MX)", "es-MX"]], {}, {id: "customDropdown", class: "large language_selection" })

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Password
        .small-9.medium-6.large-5.columns.left
          = f.password_field :password, :placeholder => "Password"

      .row.collapse
        .small-3.medium-2.large-2.columns
          %span{class: "prefix radius"} Confirm
        .small-9.medium-6.large-5.columns.left
          = f.password_field :password_confirmation, :placeholder => "Password confirmation"

      .row
        .small-12.medium-6.large-4.columns= f.submit "Sign up", :class => "button"

      .row
        .small-12.medium-6.large-4.columns= render "devise/shared/links"