.row
  .small-12.small-centered.large-6.large-centered.columns.text-center
    %h3= t("devise.actions.forgot")

.row
  .small-12.small-centered.large-6.large-centered.columns
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      .text-center= devise_error_messages!

      .row.collapse
        .small-3.medium-3.large-3.columns
          %span{class: "prefix radius"}= t("user.email")
        .small-9.medium-9.large-9.columns.left
          = f.email_field :email, :autofocus => true, placeholder: t("user.email_long")

      .row
        .small-12.columns.text-center
          = f.submit t("devise.passwords.send_reset_instructions"), class: "button"

      .row
        .small-12.columns.text-center
          = render "devise/shared/links"
