.row
  = form_for @campaign, html: { :class => "custom"} do |f|
    %fieldset
      %legend Create your campaign
      .row
        .small-10.large-6.columns
          - if @campaign.errors.any?
            #error_explanation.twelve.columns
              %h2= pluralize(@campaign.errors.count, "error") + "prohibited this campaign from being saved:"
              %%ul
                - @campaign.errors.full_messages.each do |msg|
                  %li= msg

      .row.collapse
        .small-3.medium-2.large-1.columns
          %span{class: "prefix radius"} Name
        .small-9.medium-6.large-4.columns.left
          = f.text_field :name, :autofocus => true, :placeholder => "Name of your campaign"

      .row
        .small-6.medium-3.large-2.columns
          .switch.round.left
            %input#z(name='switch-z' type='radio' checked)
            %label(for='z' onclick='') Public

            %input#z1(name='switch-z' type='radio')
            %label(for='z1' onclick='') Private

            %span

      .row
        .small-12.medium-8.large-5.columns
          - tournaments_available = ["Select a tournament"]
          - @tournaments.each do |t|
            - tournaments_available << t.name + ": " + t.season

          = f.select(:tournament_id, tournaments_available, {}, { id: "customDropdown", :class => "medium tournament_selection" })
      
      .row#matchdays_for_tournament
        - if !@tournament.nil?
          #matchdays_recipient.small-6.medium-4.large-3.columns
            - if @matchdays_left > 0
              - potential_matchdays = ["Number of matchdays"]
              - @matchdays_left.times do |i|
                - potential_matchdays << (i+1).to_s
              = f.select(:number_of_matchdays, potential_matchdays, {}, {id: "customDropdown2", class: "small matchdays_selection" })
            / %input{:type => "number", :name => "matchdays", :min => "0", :max => @matchdays_left.to_s}

      .row
        .columns
          %ul.button-group
            %li= f.submit "Submit", class: "button"
            %li= link_to "Cancel", pages_path, :class => "button secondary"

.row
  .large-6.columns
    %p= params
    #debug